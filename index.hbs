    <!-- Handlebars -->
    <script type="x-handlebars-template" id="easy">
      <div class="card easy" style="background-image: url('./img/states/{{#if state}}{{state}}{{else}}AZ{{/if}}.jpg');">
        <div class="card-content">
          <div class="card-copy">
            <div class="line target">
              <div class="greeting">
                <div class="photo-wrapper">
                  <img src="./img/senators/{{#if target}}{{target.last}}{{else}}Boxer{{/if}}.jpg">
                </div>
                <span class="text">Senator {{target.last}},</span>
              </div>
            </div>
            <div class="line one">Please oppose passing legislation</div>
            <div class="line two">
              <span class="left">In the</span>
              <span class="absolute">
                <object id="lame-duck-svg" type="image/svg+xml" data="./img/lame-duck.svg"></object>
              </span>
              <span class="right">Session<span class="hanging-period">.</span></span>
            </div>
            <div class="line three">
              <div class="hr top"></div>
              I&rsquo;m urging you to <span class="emphasis" style="color: {{spot}};">wait <span class="underline"><object id="underline-svg" type="image/svg+xml" data="./img/underline.svg"></object></span></span> for the next congress<span class="hanging-period">.</span>
              <div class="hr bottom"></div>
            </div>
            <div class="signature">
              <div class="user-info">
                <div class="photo-wrapper">
                  <img src="./img/placeholder-avatar.jpg">
                </div>
                <div class="name">{{first}} {{last}}</div>
                <div class="location" style="color: {{spot}};">{{city}}, {{state}}</div>
              </div>
            </div>
          </div>
          <div class="footer">
            <div class="footer-copy">
              <span class="link">Send a message to your senator at <span class="url">lameduck.heritageaction.com</span></span>
            </div>
            <object id="footer-svg" type="image/svg+xml" data="./img/footer.svg"></object>
          </div>
        </div>
        <div class="card-outline"></div>
        <div class="overlay"></div>
      </div>
    </script>
