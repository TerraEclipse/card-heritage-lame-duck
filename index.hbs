    <!-- Faux Rendering Script -->
    <script src="./js/vendor/jquery-1.11.0.min.js"></script>
    <script src="./js/vendor/handlebars.js"></script>
    <script>
      $(function() {
        var options = {
              variant: '{{#if card_class}}{{card_class}}{{else}}easy{{/if}}',
              spot: '#45B9D0', // Default is blue
              flip: false,
              target: {
                title: 'Senator',
                first: 'Barbara',
                last: 'Boxer'
              }
            }
          , spotColors = ['#6EB854', '#D9A12D', '#D53D31', '#45B9D0']
          , cardTemplate = $('#' + options.variant).html();

        // Add spot color & flip options
        var firstName = '{{first}}'
          , ch = firstName.toLowerCase().charAt(0)
          , code = ch.charCodeAt(0) - 96;

        if (code <= 6) {
          options.spot = spotColors[0];
        }
        else if (code <= 12 && code > 6) {
          options.spot = spotColors[1];
          options.flip = true;
        }
        else if (code <= 18 && code > 12) {
          options.spot = spotColors[2];
        }
        else {
          options.spot = spotColors[3];
          options.flip = true;
        }

        // Compile card
        var card = Handlebars.compile(cardTemplate)
          , markup = card(options);

        // Append compiled card
        $('body').append(markup);

        // Find all svg paths and add spot color
        window.addEventListener('load', findSvg, false);

        function findSvg() {
          var svgs = ['stop-svg', 'footer-svg', 'lame-duck-svg', 'underline-svg', 'no-svg'];

          $.each(svgs, function(key, svg) {
            var object = document.getElementById(svg);

            if (object) {
              var svgDoc = object.contentDocument
                , svgRoot = svgDoc.documentElement;

              $('path', svgRoot).attr('fill', options.spot);
            } 
          });
        }
      });
    </script>
